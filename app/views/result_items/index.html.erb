<div class="bg-gray-70 h-screen">
  <div class="container mx-auto px-4">
    <h1 class="text-4xl font-bold mb-8">List of Results</h1>

    <% @result_items.all.each do |result_item| %>
      <div class="bg-white rounded-lg shadow-lg p-6 mb-8">
        <h2 class="text-xl font-bold mb-2"><%= result_item.title %></h2>
        <p class="text-gray-700 text-base mb-4"><%= result_item.description %></p>
        <p class="text-gray-700 text-base mb-4"><%= result_item.price %> <%= result_item.currency %></p>
        <% if result_item.image_url.present? %>
          <img src="<%= result_item.image_url %>" alt="Result Item Image" class="w-full mb-4">
        <% end %>
        <p class="text-gray-700 text-base mb-4"><%= result_item.item_type %> posted on <%= result_item.posted_at.strftime('%b %d, %Y') %></p>
        <p class="text-gray-700 text-base mb-4">Located in <%= result_item.city %></p>
        <% if result_item.hosted_website.present? %>
          <p class="text-gray-700 text-base mb-4">Hosted on <%= result_item.hosted_website %></p>
        <% end %>
        <% if result_item.hosted_url.present? %>
          <a href="<%= result_item.hosted_url %>" class="text-blue-500 hover:text-blue-700" target="_blank">View on <%= result_item.hosted_website %></a>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
